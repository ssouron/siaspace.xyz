#!/bin/bash

used_space_nb=$(df | grep 'hubicfuse' | awk '{print $3}')
free_space_nb=$(df | grep 'hubicfuse' | awk '{print $4}')

echo -e "\nused space nb = $used_space_nb"
echo -e "\nfree space nb = $free_space_nb"

free_space=$(expr $free_space_nb / 1048576)
used_space=$(expr $used_space_nb / 1048576)

echo -e "\nStorage : \n    $used_space GB used \n    $free_space GB free \n"

